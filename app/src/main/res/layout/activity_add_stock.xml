<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".view.AddStockActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/barcodeImage2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Read Barcode With Camera"
                android:onClick="barcodeImageClicked"
                android:src="@drawable/camera" />

            <EditText
                android:id="@+id/barcodeText2"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:layout_marginLeft="4dp"
                android:autofillHints=""
                android:backgroundTint="@android:color/holo_orange_light"
                android:ems="10"
                android:hint="Barcode"
                android:inputType="number"
                android:maxLength="13"
                android:minHeight="48dp"
                android:textColor="@color/white"
                android:textColorHint="#CFCFCF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/productBrandText2"
                    android:layout_width="188dp"
                    android:layout_height="48dp"
                    android:autofillHints=""
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Product Brand"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="@color/white"
                    android:textColorHint="#CFCFCF" />

                <EditText
                    android:id="@+id/productNameText2"
                    android:layout_width="188dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="24dp"
                    android:autofillHints=""
                    android:backgroundTint="@android:color/holo_orange_light"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="Product Name"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:textColor="@color/white"
                    android:textColorHint="#CFCFCF" />
            </LinearLayout>

            <ImageView
                android:id="@+id/productImage2"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_marginLeft="4dp"
                android:contentDescription="Product Image"
                android:src="@drawable/selectimage" />
        </LinearLayout>

        <Spinner
            android:id="@+id/suppliersSpinner"
            android:layout_width="292dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:contentDescription="Suppliers" />

        <EditText
            android:id="@+id/addedStockText"
            android:layout_width="292dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:autofillHints=""
            android:backgroundTint="@android:color/holo_orange_light"
            android:ems="10"
            android:hint="Added Stock"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#CFCFCF" />

        <EditText
            android:id="@+id/unitPriceText"
            android:layout_width="292dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:autofillHints=""
            android:backgroundTint="@android:color/holo_orange_light"
            android:ems="10"
            android:enabled="false"
            android:hint="Unit Price"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#CFCFCF" />

        <EditText
            android:id="@+id/totalPriceText"
            android:layout_width="292dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:autofillHints=""
            android:backgroundTint="@android:color/holo_orange_light"
            android:ems="10"
            android:hint="Total Price"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="@color/white"
            android:textColorHint="#CFCFCF" />

        <Button
            android:id="@+id/addToStockButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:onClick="addToStockClicked"
            android:text="ADD TO STOCK"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>