<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".view.StaffActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <ImageView
            android:id="@+id/addStockButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="addstock"
            android:onClick="addStockClicked"
            app:srcCompat="@drawable/addstock" />

        <ImageView
            android:id="@+id/removeStockButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="removestock"
            android:onClick="removeStockClicked"
            app:srcCompat="@drawable/removestock"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>